import java.util.*;

public class Main{
    public static void main(String[] args){
        int t;
        Scanner sc = new Scanner(System.in);
        t = sc.nextInt();
        
        while(t>0){
        int n = sc.nextInt();
        int sum = 0;
        do{  
            sum = sum + n;
            n--;
        }while(n >0);  
            t--;

        System.out.println(sum);
        }
        
    }
}
